<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping map-null="false">
        <class-a>be.raildelays.domain.railtime.Step</class-a>
        <class-b>be.raildelays.domain.entities.LineStop</class-b>
    </mapping>


    <mapping map-null="false">
        <class-a>be.raildelays.domain.entities.LineStop</class-a>
