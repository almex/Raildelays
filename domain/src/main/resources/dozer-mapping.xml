            <a>next</a>
            <b>next</b>
        </field-exclude>
        <field-exclude>
            <a>previous</a>
            <b>previous</b>
        </field-exclude>
        <field-exclude>
            <a>id</a>
            <b>id</b>
        </field-exclude>
        <field-exclude>
            <a>trainLine</a>
            <b>trainLine</b>
        </field-exclude>
        <field-exclude>
            <a>station</a>
            <b>station</b>
        </field-exclude>
        <field-exclude>
            <a>date</a>
            <b>date</b>
        </field-exclude>
    </mapping>

    <mapping map-null="false">
        <class-a>be.raildelays.domain.railtime.Train</class-a>
        <class-b>be.raildelays.domain.entities.TrainLine</class-b>
    </mapping>

    <mapping map-null="false">
        <class-a>be.raildelays.domain.railtime.Station</class-a>
