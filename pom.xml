<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>be.raildelays</groupId>
	<artifactId>raildelays-parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<name>Parent</name>
	<packaging>pom</packaging>

	<modules>
		<module>common-layer</module>
		<module>domain-layer</module>
		<module>repository-layer</module>
		<module>httpclient-layer</module>
		<module>parser-layer</module>
		<module>service-layer</module>
		<module>batch-layer</module>
		<module>java-fx-layer</module>
	</modules>

	<prerequisites>
		<maven>3.0.0</maven>
	</prerequisites>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>${project.build.sourceEncoding}</project.reporting.outputEncoding>
		<version.spring>3.1.0.RELEASE</version.spring>
		<version.spring.batch>2.1.8.RELEASE</version.spring.batch>
		<version.hibernate>4.0.1.Final</version.hibernate>
		<version.hsqldb>2.2.7</version.hsqldb>
		<version.derby>10.8.2.2</version.derby>
		<jdk.version>1.7</jdk.version>
		<path.javafx>C:\Program Files\Oracle\JavaFX 2.0 SDK</path.javafx>
	</properties>

	<dependencyManagement>
		<dependencies>

			<!-- Internal dependencies -->
			<dependency>
				<groupId>be.raildelays</groupId>
				<artifactId>raildelays-common</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>be.raildelays</groupId>
