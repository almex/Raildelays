<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <scope>runtime</scope>
            <excludes>
                <exclude>be.raildelays:raildelays-batch</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>be.raildelays:raildelays-batch</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>${project.build.directory}/classes/run.bat</source>
            <outputDirectory/>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/classes/runDebug.bat</source>
            <outputDirectory/>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/classes/run.sh</source>
            <outputDirectory/>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/classes/startServer.bat</source>
            <outputDirectory/>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory/>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>assemblies/**</exclude>
                <exclude>./run.bat</exclude>
                <exclude>./runDebug.bat</exclude>
                <exclude>./run.sh</exclude>
                <exclude>./startServer.bat</exclude>
            </excludes>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
</assembly>
