<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 	<bean id="batchDataSource" factory-bean="batchDatabaseLoader" -->
<!-- 		factory-method="getDataSource" /> -->

	<bean id="batchDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource" depends-on="batchDatabaseLoader" >
		<property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver" />
		<property name="username" value="" />
		<property name="password" value="" />
		<property name="url" value="jdbc:derby:batchRepository" />
	</bean>
		
	<bean id="batchDatabaseLoader" class="be.raildelays.repository.LoadDatabase"
		init-method="startUp" destroy-method="shutdown">
		<property name="databaseName" value="batchRepository" />
		<property name="initScriptPath" value="spring-batch-schema-derby.ddl" />
	</bean>
	
<!-- 	<alias name="transactionManager" alias="batchTransactionManager"/> -->

	<bean id="batchTransactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	
	<bean id="transactionTemplate" class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager" ref="batchTransactionManager"/>
	</bean>

