<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>
	
	<appender name="output" class="org.apache.log4j.FileAppender">
		<param name="file" value="log/output.log"/>		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>	
	
	<appender name="input" class="org.apache.log4j.FileAppender">
		<param name="file" value="log/input.log"/>		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>
	
	<appender name="error" class="org.apache.log4j.FileAppender">
		<param name="file" value="log/error.log"/>		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>
	
	<logger name="be.raildelays">
		<level value="error" />
		<appender-ref ref="error" />
	</logger>
	
	<logger name="be.raildelays.batch.reader">
		<level value="debug" />
		<appender-ref ref="input" />
	</logger>
	<logger name="be.raildelays.httpclient">
		<level value="debug" />
		<appender-ref ref="input" />
	</logger>	
	<logger name="be.raildelays.parser">
		<level value="debug" />
		<appender-ref ref="input" />
	</logger>
	
	<logger name="be.raildelays.batch.writer">
		<level value="debug" />
		<appender-ref ref="output" />
	</logger>
	<logger name="be.raildelays.service.RaildelaysService">
		<level value="debug" />
		<appender-ref ref="output" />
	</logger>

	<logger name="org.springframework">
		<level value="error" />
		<appender-ref ref="error" />
	</logger>
	
	<logger name="org.springframework.batch">
		<level value="error" />
		<appender-ref ref="error" />
	</logger>
	
	<logger name="org.springframework.transaction">
		<level value="error" />
		<appender-ref ref="error" />
	</logger>

	<logger name="org.hsqldb">
		<level value="error" />
		<appender-ref ref="error" />
	</logger>

	<logger name="org.hibernate">
		<level value="error" />
		<appender-ref ref="error" />
	</logger>

<!-- 	<root> -->
