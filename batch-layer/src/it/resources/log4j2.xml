<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{DATE} %-5p %-15c{1}: %m%n" />
		</Console>
        <File name="read" fileName="read.log" append="false">
            <PatternLayout pattern="%m%n" />
        </File>
        <File name="process" fileName="process.log" append="false">
            <PatternLayout pattern="%m%n" />
        </File>
        <File name="write" fileName="write.log" append="false">
            <PatternLayout pattern="%m%n" />
        </File>
	</appenders>
	<loggers>
	    <logger name="org.springbatch.testcase.CompositeInputReader" level="info">
            <appender-ref ref="read" />
        </logger>
        <logger name="org.springbatch.testcase.CompositeDataProcessor" level="info">
            <appender-ref ref="process" />
        </logger>
        <logger name="org.springbatch.testcase.OutputWriter" level="info">
            <appender-ref ref="write" />
        </logger>
		<root level="error">
			<appender-ref ref="console" />
		</root>
	</loggers>
</configuration>