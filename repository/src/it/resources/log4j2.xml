<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{DATE} %-5p %-15c{1}: %m%n"/>
        </Console>

    </appenders>
    <loggers>

        <root level="info">
            <appender-ref ref="console"/>
        </root>
    </loggers>
</configuration>